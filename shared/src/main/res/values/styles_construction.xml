<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="pop_bottom_animation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_enter_in</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_exit</item>
    </style>

    <style name="pop_top_animation">
        <item name="android:windowEnterAnimation">@anim/popup_top_enter_in</item>
        <item name="android:windowExitAnimation">@anim/popup_top_exit</item>
    </style>

    <!-- toolbar home button style-->
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AlertWindowTitleStyle" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:textColor">@color/alert_dialog_title</item>
    </style>

    <style name="Construction.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/alert_dialog_message</item>
        <item name="android:windowTitleStyle">@style/AlertWindowTitleStyle</item>
    </style>

    <style name="Construction.DialogStyle.Translucent" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme.Calendar" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CalendarModalStyle</item>
    </style>

    <style name="CalendarModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">320dp</item>
    </style>

    <style name="Construction.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="FormRecyclerStyle" parent="Theme.AppCompat.Light">
        <item name="android:listDivider">@drawable/divider_recycler_view_shape</item>
    </style>
</resources>