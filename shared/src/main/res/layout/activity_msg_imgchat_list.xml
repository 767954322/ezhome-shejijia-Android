<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_msg_imgchat_list_rootlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


    <LinearLayout
        android:id="@+id/activity_msg_imgchat_list_ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_msg_imgchat_list_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@color/bg_f9"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ibn_public_return"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/transparent"
                android:src="@drawable/back_ico"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_public_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/mychat"
                android:textSize="@dimen/font_16"/>
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_img_detial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/in_top"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="@dimen/size_4"/>
    </LinearLayout>
</RelativeLayout>
