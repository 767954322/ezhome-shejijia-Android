<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.autodesk.shejijia.shared.components.common.uielements.pulltorefresh.PullToRefreshLayout
        android:id="@+id/refresh_my_bid_all_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/view_refresh_head" />

        <com.autodesk.shejijia.shared.components.common.uielements.pulltorefresh.PullListView
            android:id="@+id/lv_my_bid_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none"/>

        <include layout="@layout/view_load_more" />
    </com.autodesk.shejijia.shared.components.common.uielements.pulltorefresh.PullToRefreshLayout>

</LinearLayout>