<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_navr_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bg_f9"
                android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/backButton_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/nav_left_imageButton"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/transparent"
            android:src="@drawable/icon_back_normal_z"
            android:padding="@dimen/navbar_icon_padding"
            android:scaleType="centerInside"
            android:visibility="visible"/>

        <com.autodesk.shejijia.shared.components.common.uielements.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/size_33"
            android:layout_height="@dimen/size_33"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/chat_room_commandcell_avatar_marginleft"
            android:layout_marginTop="@dimen/chat_room_commandcell_avatar_margintop"
            android:scaleType="centerCrop"
            android:src="@drawable/default_useravatar"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/nav_left_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_17"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/nav_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textColor="#333333"
        android:maxEms="6"
        android:singleLine="true"
        android:textSize="@dimen/font_16"/>

    <LinearLayout
        android:id="@+id/ll_contain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="55dp"
        android:layout_toRightOf="@id/backButton_layout"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        >

    </LinearLayout>


    <ImageButton
        android:id="@+id/nav_secondary_imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="55dp"
        android:background="@drawable/transparent"
        android:src="@drawable/icon_project_material"
        android:padding="@dimen/navbar_icon_padding"
        android:scaleType="centerInside"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/right_contain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rightButton_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/nav_right_imageButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/transparent"
            android:src="@drawable/msg_file"
            android:padding="@dimen/navbar_icon_padding"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/nav_badge_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/redsharp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/nav_right_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""

            android:textSize="15sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_navigation_header_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/navbar_bottom_border_color"
        ></View>
</RelativeLayout>