<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_tool_parentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_edittext_shape"
    android:padding="@dimen/font_10"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_selectphoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/photo_ico" />

        <ImageView
            android:id="@+id/chat_takephoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/camera_ico" />

        <ImageView
            android:id="@+id/chat_custom_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>

