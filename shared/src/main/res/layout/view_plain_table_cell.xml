<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/precheck_additional_height">

    <RelativeLayout android:id="@+id/rl_table_cell"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/precheck_additional_height">

        <TextView android:id="@+id/tv_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:textColor="@color/font_title"
                  android:textSize="@dimen/precheck_font_15"/>

        <TextView android:id="@+id/tv_notifications"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginStart="@dimen/spacing_plain_table_cell"
                  android:layout_toEndOf="@id/tv_title"
                  android:background="@drawable/ic_notification"
                  android:gravity="center"
                  android:textColor="@color/con_white"
                  android:visibility="gone"/>

        <TextView android:id="@+id/tv_result"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_centerVertical="true"
                  android:layout_alignParentEnd="true"
                  android:textColor="@color/font_subtitle"
                  android:drawableEnd="@drawable/ic_next"
                  android:gravity="center_vertical"
                  android:drawablePadding="@dimen/spacing_plain_table_cell"
                  android:textSize="@dimen/precheck_font_15"/>

        <ImageView android:id="@+id/iv_information"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginEnd="@dimen/spacing_plain_table_cell"
                   android:layout_toStartOf="@id/tv_result"
                   android:background="@drawable/ic_information"
                   android:visibility="gone"/>

    </RelativeLayout>



</FrameLayout>