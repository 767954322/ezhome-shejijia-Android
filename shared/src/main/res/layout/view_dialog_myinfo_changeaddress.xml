<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_address_info"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical">
    <!--android:layout_height="@dimen/size_250"-->
    <LinearLayout
        android:id="@+id/ll_address_info_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog_selector_city"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_f9"
            android:padding="10dp">

            <TextView
                android:id="@+id/btn_select_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18"/>

            <TextView
                android:id="@+id/btn_select_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip"
                android:text="确认"
                android:textColor="@color/bg_0084ff"
                android:textSize="@dimen/font_18"/>
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.autodesk.shejijia.shared.components.common.tools.wheel.WheelView
                android:id="@+id/provinceView"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <com.autodesk.shejijia.shared.components.common.tools.wheel.WheelView
                android:id="@+id/cityView"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <com.autodesk.shejijia.shared.components.common.tools.wheel.WheelView
                android:id="@+id/districtView"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>