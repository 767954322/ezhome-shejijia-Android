<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_ff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_seek_designer_detail_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_180"
            android:scaleType="fitXY"
            android:src="@drawable/common_case_icon" />

        <TextView
            android:id="@+id/img_seek_designer_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_10">

            <TextView
                android:id="@+id/img_seek_designer_detail_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_5"
                android:background="@color/bg_b0" />

            <TextView
                android:id="@+id/img_seek_designer_detail_living_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5" />

            <TextView
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:background="@color/bg_b0" />


            <TextView
                android:id="@+id/img_seek_designer_detail_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
