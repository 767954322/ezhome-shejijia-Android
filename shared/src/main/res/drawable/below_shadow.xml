<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:centerColor="@color/line_color"
                android:endColor="@color/line_color"
                android:startColor="@color/line_color" />

        </shape>
    </item>

    <!-- content -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>