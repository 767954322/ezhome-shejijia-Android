<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Construction.Button</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>


    <style name="pop_bottom_animation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_enter_in</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_exit</item>
    </style>

</resources>
