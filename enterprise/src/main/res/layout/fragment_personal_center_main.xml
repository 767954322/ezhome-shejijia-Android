<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_personal_center_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_padding_normal">

        <ImageButton
            android:id="@+id/imgBtn_back"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/back_ico" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_padding_third"
        android:background="@color/blue"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:padding="@dimen/spacing_padding_normal"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgBtn_personal_headPic"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@mipmap/default_head"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_padding_normal"
        android:background="@color/blue"
        android:textSize="@dimen/font_large"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="王小明"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_padding_normal"
        android:background="@color/blue"
        android:textSize="@dimen/font_normal"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="客户经理"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_padding_third"
        android:background="@color/blue"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_margin_double" />

    <TextView
        android:id="@+id/tv_personal_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_center_my_project"
        android:textSize="@dimen/font_normal"
        android:padding="@dimen/spacing_padding_double"
        android:textColor="@color/black"
        android:gravity="center_vertical|start"/>

    <TextView
        android:id="@+id/tv_personal_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_center_more"
        android:textSize="@dimen/font_normal"
        android:padding="@dimen/spacing_padding_double"
        android:textColor="@color/black"
        android:gravity="center_vertical|start"/>

</LinearLayout>