<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_ff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_seek_designer_detail_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_180"
            android:scaleType="fitXY"
            android:src="@drawable/common_case_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_10"
            android:visibility="visible">


            <TextView
                android:id="@+id/img_seek_designer_detail_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_17"
                android:textColor="@color/bg_33"
                android:layout_marginLeft="@dimen/size_5"
                android:text="现代" />


            <TextView
                android:id="@+id/img_seek_designer_detail_living_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_17"
                android:textColor="@color/bg_33"
                android:layout_marginLeft="@dimen/size_10"
                android:text="四室" />


            <TextView
                android:id="@+id/img_seek_designer_detail_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_10"
                android:text="180m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/size_12"
            android:layout_marginTop="@dimen/size_2">

            <ImageView
                android:layout_width="@dimen/size_13"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_height="@dimen/size_13"
                android:background="@drawable/dianzanshu_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:text="点赞数"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@color/bg_66"
                android:textSize="@dimen/size_12"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_thumb_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textSize="@dimen/size_12" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
