<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_ff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_seek_designer_detail_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_217"
            android:scaleType="fitXY"
            android:src="@drawable/common_case_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_10"
            android:visibility="visible">


            <TextView
                android:id="@+id/img_seek_designer_detail_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="现代"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/size_17" />


            <TextView
                android:id="@+id/img_seek_designer_detail_living_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:text="四室"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/size_17" />


            <TextView
                android:id="@+id/img_seek_designer_detail_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:text="180m"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/size_17" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/size_12"
                    android:layout_marginRight="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/size_13"
                        android:layout_height="@dimen/size_13"
                        android:layout_marginLeft="@dimen/size_15"
                        android:background="@drawable/dianzanshu_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_5"
                        android:text="点赞数"
                        android:textColor="@color/bg_66"
                        android:visibility="gone"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:id="@+id/tv_thumb_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:text="0"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
