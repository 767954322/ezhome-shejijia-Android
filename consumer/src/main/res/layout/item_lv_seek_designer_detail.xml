<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_ff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_seek_designer_detail_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_180"
            android:scaleType="fitXY"
            android:src="@drawable/common_case_icon"/>

        <TextView
            android:id="@+id/img_seek_designer_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:padding="@dimen/size_10"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_marginBottom="@dimen/size_15"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginTop="@dimen/size_4"
                android:background="@drawable/dianzanshu_ico"/>

            <TextView
                android:id="@+id/tv_thumb_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_marginTop="@dimen/size_4"
                android:text="点赞数111"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_10">


            <TextView
                android:id="@+id/img_seek_designer_detail_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"/>

            <TextView
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_5"
                android:background="@color/bg_b0"/>

            <TextView
                android:id="@+id/img_seek_designer_detail_living_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"/>

            <TextView
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:background="@color/bg_b0"/>


            <TextView
                android:id="@+id/img_seek_designer_detail_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
