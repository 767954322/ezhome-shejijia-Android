<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_ff"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/size_1"-->
        <!--android:layout_marginLeft="@dimen/size_10"-->
        <!--android:layout_marginRight="@dimen/size_10"-->
        <!--android:background="@color/bg_e4" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <ImageView
                android:layout_marginLeft="@dimen/size_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_position_normal"/>

            <TextView
                android:id="@+id/tv_designer_order_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="居然大厦"
                android:textColor="@color/bg_0084ff"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/tv_designer_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传设计交付物"
                android:textColor="@color/bg_0084ff"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:background="@color/bg_ea"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_13"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_order_project_number"
                android:textColor="@color/bg_9E"
                android:textSize="@dimen/font_15"/>

            <TextView
                android:id="@+id/common_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03464545454545"
                android:textColor="@color/bg_9E"
                android:textSize="@dimen/font_15"/>
        </LinearLayout>

        <!--项目地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_13"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_common_order_house_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/common_order_project_address"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_15"/>
        </LinearLayout>
        <!--房屋类型-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_13"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demand_project_types"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_15"/>

            <TextView
                android:id="@+id/tv_designer_order_house_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_15"/>
        </LinearLayout>
        <!--房屋风格-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_13"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_common_order_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/designer_order_style"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_15"/>

            <TextView
                android:id="@+id/tv_designer_order_house_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_common_order_house"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_15"/>

            <!-- <ImageView
                 android:id="@+id/btn_designer_order_needdetail"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/size_20"
                 android:gravity="right"
                 android:src="@drawable/icon_unfold_normal"/>-->
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_5"
            android:background="@color/bg_ea"/>

        <!--<include layout="@layout/item_lv_decoration_beishu"></include>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_designer_order_projectdetail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35"
                android:layout_marginRight="@dimen/size_20"
                android:background="@drawable/bg_common_btn_blue"
                android:paddingLeft="@dimen/size_5"
                android:paddingRight="@dimen/size_5"
                android:text="@string/designer_order_projectdetail_progress"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/font_14"/>

            <Button
                android:id="@+id/btn_designer_order_needdetail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35"
                android:layout_marginRight="@dimen/size_10"
                android:background="@drawable/bg_common_btn_blue"
                android:paddingLeft="@dimen/size_5"
                android:paddingRight="@dimen/size_5"
                android:text="@string/my_bid_demand_particulars"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/bg_eef1f4"/>

</LinearLayout>