<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_ee"
              android:orientation="vertical">

    <include android:id="@+id/common_navbar"
             layout="@layout/view_navigation_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_look_more_detail_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_180"
            android:background="@drawable/common_case_icon"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@color/bg_ff"
            android:orientation="horizontal">

            <com.autodesk.shejijia.consumer.uielements.viewgraph.PolygonImageView
                android:id="@+id/piv_look_more_detail_head"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:src="@drawable/icon_commen_head_normal"
                app:poly_vertices="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_look_more_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/bg_33"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_look_more_detail_living_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bg_66"/>

                    <TextView
                        android:id="@+id/tv_look_more_detail_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:textColor="@color/bg_66"/>

                    <TextView
                        android:id="@+id/tv_look_more_detail_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:textColor="@color/bg_66"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_look_more_detail_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/size_10"
                android:background="@drawable/icon_chat_common_normal"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_10">

        <TextView
            android:id="@+id/tv_look_more_detail_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_40"
            android:background="@color/bg_ff"
            android:paddingLeft="@dimen/size_5"
            android:paddingRight="@dimen/size_5"
            android:paddingTop="@dimen/size_10"
            android:textColor="@color/bg_66"/>

        <ImageView
            android:id="@+id/img_look_more_detail_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/size_20"
            android:background="@drawable/icon_hover_normal"/>
    </FrameLayout>

</LinearLayout>
