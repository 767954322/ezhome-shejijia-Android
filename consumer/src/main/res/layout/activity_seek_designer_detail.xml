<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lv_seek_detail_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <com.autodesk.shejijia.shared.components.common.uielements.scrollview.MyScrollViewLayout
        android:id="@+id/myScrollViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_navbar">

        <include layout="@layout/view_refresh_head" />

        <com.autodesk.shejijia.shared.components.common.uielements.scrollview.MyScrollView
            android:id="@+id/myScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_person_master_page_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/piv_seek_designer_head_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="@dimen/size_130"
                            android:layout_height="@dimen/size_100"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/size_20"
                            >

                            <com.autodesk.shejijia.shared.components.common.uielements.viewgraph.PolygonImageView
                                android:id="@+id/piv_seek_designer_head"
                                android:layout_width="@dimen/size_74"
                                android:layout_height="@dimen/size_74"
                                android:layout_gravity="center"
                                android:background="@drawable/icon_default_avator"
                                app:poly_vertices="0" />

                            <ImageView
                                android:id="@+id/img_seek_designer_detail_certification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:layout_marginBottom="@dimen/size_14"
                                android:layout_marginRight="@dimen/size_10"
                                android:src="@drawable/icon_certification_normal"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_4"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color_be_good_at"
                                android:text="@string/designer_design_fee" />

                            <TextView
                                android:id="@+id/tv_seek_designer_design_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color_be_good_at"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="尚未填写" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/size_10"
                                android:background="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:textColor="@color/person_color_be_good_at"
                                android:text="@string/designer_measure_fee" />

                            <TextView
                                android:id="@+id/tv_seek_designer_detail_measure_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color_be_good_at"
                                android:text="@string/measure_fee_default" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color"
                                android:text="@string/designer_good_style" />

                            <TextView
                                android:id="@+id/tv_seek_designer_detail_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="尚未填写" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_5"
                            android:layout_marginTop="@dimen/size_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color"
                                android:text="@string/designer_working_year" />

                            <TextView
                                android:id="@+id/tv_seek_designer_detail_yeas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color"
                                android:text="尚未填写" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/size_10"
                                android:background="#666666" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:textColor="@color/person_color"
                                android:text="@string/attention_num" />


                            <TextView
                                android:id="@+id/tv_followed_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/person_color"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_seek_designer_detail_chat_measure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_16"
                            android:layout_marginTop="@dimen/size_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_seek_designer_detail_chat"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/size_30"
                                android:layout_marginRight="@dimen/size_20"
                                android:background="@drawable/bg_common_btn_blue"
                                android:text="@string/designer_online_communication"
                                android:textColor="@color/bg_ff"
                                android:textSize="@dimen/font_12" />

                            <Button
                                android:id="@+id/btn_seek_designer_detail_optional_measure"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/size_30"
                                android:background="@drawable/bg_common_btn_blue"
                                android:text="@string/optional_measure"
                                android:textColor="@color/bg_ff"
                                android:textSize="@dimen/font_12" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_case_choose_contain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_44"
                        android:background="@color/bg_ff"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            android:background="@color/bg_ef" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/case_2d_btn"
                                android:layout_width="@dimen/size_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="效果图"
                                android:textColor="@color/person_color"
                                android:textSize="@dimen/font_15" />

                            <TextView
                                android:id="@+id/case_3d_btn"
                                android:layout_width="@dimen/size_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="3D方案"
                                android:textColor="@color/person_color"
                                android:textSize="@dimen/font_15"
                                 />

                            <TextView
                                android:id="@+id/consumer_appraise"
                                android:layout_width="@dimen/size_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="评价"
                                android:textColor="@color/person_color"
                                android:textSize="@dimen/font_15"

                                />

                        </LinearLayout>


                        <com.autodesk.shejijia.consumer.uielements.chooseview.ChooseViewPointer
                            android:id="@+id/choose_point"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bg_ff" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_1"
                            android:background="@color/bg_ef" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@color/bg_ef" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_10"
                    android:background="@color/grey_white_9" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@color/bg_ef" />

                <!--替换的container-->
                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/default_ll_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/default_icon_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/size_90"
                            android:background="@drawable/default_icon" />

                        <TextView
                            android:id="@+id/empty_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_10"
                            android:text="暂无案例" />


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </com.autodesk.shejijia.shared.components.common.uielements.scrollview.MyScrollView>

        <include layout="@layout/view_load_more" />
    </com.autodesk.shejijia.shared.components.common.uielements.scrollview.MyScrollViewLayout>


    <LinearLayout
        android:id="@+id/ll_case_choose_contain_replace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_below="@id/common_navbar"
        android:background="@color/bg_ff"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/bg_ef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_46"
            android:background="@color/bg_ff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/case_2d_btn_replace"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="效果图"
                android:textColor="@color/bg_00"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/case_3d_btn_replace_top"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3D方案"
                android:textColor="@color/bg_00"
                android:textSize="@dimen/font_16" />


            <TextView
                android:id="@+id/consumer_appraise_replace_top"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/bg_00"
                android:textSize="@dimen/font_16"


                />

        </LinearLayout>


        <com.autodesk.shejijia.consumer.uielements.chooseview.ChooseViewPointer
            android:id="@+id/choose_point_replace"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/bg_ef" />

    </LinearLayout>


</RelativeLayout>
