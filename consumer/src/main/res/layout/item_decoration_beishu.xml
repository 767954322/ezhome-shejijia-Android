<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_consumer_decoration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">

        <ImageView
            android:id="@+id/iv_tag_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_taocan" />


        <TextView
            android:id="@+id/tv_decoration_beishu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginRight="@dimen/size_5"
            android:text="@string/consumer_decoration_name"
            android:textColor="@color/bg_33"
            android:textSize="@dimen/font_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/bg_33"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_decoration_community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consumer_decoration_name"
            android:textColor="@color/bg_33"
            android:textSize="@dimen/font_16" />


    </LinearLayout>

    <include layout="@layout/view_parting_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_ff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@color/black">
            <!--项目编号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_25"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consumer_decoration_project_id"
                    android:textColor="@color/bg_9E"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_decoration_beishu_needs_id"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@color/no_color"
                    android:textColor="@color/bg_9E"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>

            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_bid_name"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_decoration_beishu_consumer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>
            <!--联系电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_25"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consume_phone"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_decoration_beishu_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

            </LinearLayout>

            <!--项目地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_address"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_decoration_beishu_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

            </LinearLayout>

            <!--小区名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consume_detail_address"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_decoration_beishu_community_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view_parting_line"></include>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/size_5"
        android:paddingRight="@dimen/size_5">

        <FrameLayout
            android:id="@+id/frame_consumer_order_photo"
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent">

            <com.autodesk.shejijia.consumer.uielements.viewgraph.PolygonImageView
                android:id="@+id/poly_designer_photo_beishu"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center"
                android:src="@drawable/icon_default_avator"
                app:poly_vertices="0" />

            <ImageView
                android:id="@+id/iv_real_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/size_5"
                android:background="@drawable/icon_real_name_small"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/frame_consumer_order_photo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_designer_name_beishu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_10"
                android:layout_weight="1"
                android:text="@string/designer"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12" />

            <!--<ImageView
                android:id="@+id/img_decoration_beishu_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/size_10"
                android:src="@drawable/icon_chat_common_normal"/>-->
            <Button
                android:id="@+id/img_decoration_beishu_chat"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_25"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn_filtrate_pressed"
                android:text="@string/designer_online_communication"
                android:textColor="@color/bg_0084ff"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <include layout="@layout/view_common_line"></include>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_blue_2" />
</LinearLayout>