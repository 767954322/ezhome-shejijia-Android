    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/size_10">

        <ImageView
            android:id="@+id/iv_tag_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_taocan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/iv_tag_ref"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_desinger_beishuorder_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/consumer_decoration_name"
                android:textColor="@color/bg_33"
                android:maxEms="3"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/tv_decoration_community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxEms="4"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/consumer_decoration_name"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16"/>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_10"
        android:background="@color/bg_e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@color/black">
            <!--项目编号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/consumer_decoration_project_id"
                    android:textColor="@color/bg_9E"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_desinger_beishuorder_projectid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:text="1222544"
                    android:textColor="@color/bg_9E"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>

            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/my_bid_name"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_desinger_beishuorder_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="张三"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>

            <!--项目地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/project_address"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_desinger_beishuorder_projectaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="北京市朝阳区"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

            </LinearLayout>

            <!--联系电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/user_phone"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_desinger_beishuorder_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/no_color"
                    android:text="15245689225"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

            </LinearLayout>



            <!--小区名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_3"
                    android:text="@string/consume_detail_address"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_desinger_beishuorder_homeaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="天畅园2单元"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_15" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@color/demand_color" />


            <include layout="@layout/item_lv_decoration_beishu"></include>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/light_blue_2" />
</LinearLayout>