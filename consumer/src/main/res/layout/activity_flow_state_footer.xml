<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_85">

    <TextView
        android:id="@+id/tv_create_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_25"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginTop="@dimen/size_25"
        android:text="@string/create_date" />

    <Button
        android:id="@+id/btn_stop_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_date"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        android:background="@drawable/bg_common_btn_blue"
        android:text="@string/stop_demand"
        android:textColor="@color/bg_ff"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />
</RelativeLayout>
