<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ff"
    android:orientation="vertical"
    tools:context=".personalcenter.designer.activity.CertificationActivity">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_refuse_popup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_0"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/bg_eb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_15"
                            android:text="@string/attestation_true_name"
                            android:textColor="@color/bg_33"
                            android:textSize="@dimen/font_16" />

                        <com.autodesk.shejijia.shared.components.common.uielements.TextViewContent
                            android:id="@+id/et_autonym_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/no_color"
                            android:ellipsize="end"
                            android:ems="10"
                            android:singleLine="true" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/bg_f1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_15"
                            android:text="@string/attestation_phone"
                            android:textColor="@color/bg_33"
                            android:textSize="@dimen/font_16" />

                        <com.autodesk.shejijia.shared.components.common.uielements.TextViewContent
                            android:id="@+id/et_autonym_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/no_color"
                            android:ems="10"
                            android:maxLength="11"
                            android:phoneNumber="true"
                            android:singleLine="true" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/bg_f1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_15"
                            android:text="@string/attestation_id_number"
                            android:textColor="@color/bg_33"
                            android:textSize="@dimen/font_16" />

                        <com.autodesk.shejijia.shared.components.common.uielements.TextViewContent
                            android:id="@+id/et_autonym_identity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/no_color"
                            android:ems="10"
                            android:maxLength="18"
                            android:singleLine="true" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/bg_f1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_15"
                        android:paddingTop="@dimen/size_15"
                        android:text="@string/id_photo"
                        android:textColor="@color/bg_33"
                        android:textSize="@dimen/font_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_autonym_front"
                                android:layout_width="@dimen/size_180"
                                android:layout_height="@dimen/size_140"
                                android:background="@drawable/front_ico"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/tv_positive_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/autonym_no_uploading" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_autonym_contrary"
                                android:layout_width="@dimen/size_180"
                                android:layout_height="@dimen/size_140"
                                android:background="@drawable/reverse_side_ico"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/tv_back_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/autonym_no_uploading" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_autonym_permit"
                                android:layout_width="@dimen/size_180"
                                android:layout_height="@dimen/size_140"
                                android:background="@drawable/hand_ico"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/tv_head_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/autonym_no_uploading" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btn_autonym_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_real_name_btn_blue"
                android:text="@string/autonym_submit"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/font_21" />
        </LinearLayout>

