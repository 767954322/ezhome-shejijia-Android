<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_designer_meal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">

        <FrameLayout
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50">

            <com.autodesk.shejijia.shared.components.common.uielements.viewgraph.PolygonImageView
                android:id="@+id/piv_designer_meal_detail"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_marginRight="@dimen/size_10"
                app:poly_vertices="0" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_designer_meal_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/designer_meal_detail_title"
                android:textColor="@color/bg_00"
                android:textSize="@dimen/font_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/designer_meal_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_3"
                android:text="@string/designer_meal_detail_desc"
                android:textColor="@color/bg_22"
                android:textSize="@dimen/font_14" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_designer_meal_detail"
        android:background="#e3e3e3"
        />
</RelativeLayout>