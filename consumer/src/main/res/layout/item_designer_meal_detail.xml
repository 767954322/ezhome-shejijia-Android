<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_flow_state"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_designer_meal_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:layout_marginLeft="@dimen/size_6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_gravity="center_vertical">

            <com.autodesk.shejijia.consumer.uielements.viewgraph.PolygonImageView
                android:id="@+id/piv_designer_meal_detail"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_centerInParent="true"
                app:poly_vertices="0" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_designer_meal_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_6"
                android:text="流程节点"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/size_16" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_designer_meal_detail"
        android:background="#e3e3e3" />
</RelativeLayout>