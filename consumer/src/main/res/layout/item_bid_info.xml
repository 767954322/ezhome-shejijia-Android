<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bid_item_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/size_10"
    android:layout_marginRight="@dimen/size_10"
    android:paddingBottom="@dimen/size_1"
    android:background="#ffffff"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/black">

        <!--项目编号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/BidItem.Text.Light"
                android:text="@string/common_order_project_number"/>

            <TextView
                style="@style/BidItem.Text.Light"
                android:id="@+id/tv_decoration_needs_id" />
        </LinearLayout>

        <!--项目地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/BidItem.Text"
                android:text="@string/demand_project_address"/>

            <TextView
                style="@style/BidItem.Text"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tv_decoration_address"
                android:layout_width="wrap_content"
                tools:text="宜山路900号"/>
        </LinearLayout>

        <!--联系电话-->
        <LinearLayout
            android:id="@+id/decoration_phone_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/BidItem.Text"
                android:text="@string/common_order_project_number"/>

            <TextView
                style="@style/BidItem.Text"
                android:id="@+id/tv_decoration_phone"/>
        </LinearLayout>

        <!--房屋类型-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/BidItem.Text"
                android:text="@string/demand_project_types"/>

            <TextView
                style="@style/BidItem.Text"
                android:id="@+id/tv_decoration_house_type"/>
        </LinearLayout>

        <!--风格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/BidItem.Text"
                android:text="@string/fitment_style"/>

            <TextView
                style="@style/BidItem.Text"
                android:id="@+id/tv_decoration_style"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_decoration_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableRight="@drawable/icon_unfold_normal"
        />
</LinearLayout>
