<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_piv"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/size_60"
    android:orientation="vertical"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_60"
        android:orientation="horizontal">

        <com.autodesk.shejijia.consumer.uielements.viewgraph.PolygonImageView
            android:id="@+id/piv_consumer_order_photo_01"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_default_avator"
            app:poly_vertices="0" />

        <RelativeLayout
            android:id="@+id/rl_item_decoration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/piv_consumer_order_photo_01"
            android:padding="@dimen/size_5">

            <TextView
                android:id="@+id/tv_designer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_decoration_mesure"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/bg_00"
                android:textSize="@dimen/size_15" />

            <ImageButton
                android:id="@+id/ib_flow_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_5"
                android:background="@color/white"
                android:drawablePadding="@dimen/size_8"
                android:enabled="false"
                android:src="@drawable/im_ico" />
        </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/view_parting_line"></include>
</LinearLayout>
