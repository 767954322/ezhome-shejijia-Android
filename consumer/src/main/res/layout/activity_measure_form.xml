                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tvc_measure_form_project_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="请选择设计预算"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@drawable/icon_unfold_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_18"
                    android:background="@color/bg_ef" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_16"
                    android:text="@string/demand_project_budget"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tvc_measure_fitment_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="请选择装修预算"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@drawable/icon_unfold_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_18"
                    android:background="@color/bg_ef" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_measure_form_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_16"
                    android:text="@string/demand_style"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tvc_measure_form_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="请选择风格"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@drawable/icon_unfold_normal" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_18"
                    android:background="@color/bg_ef" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_house_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_16"
                    android:text="@string/demand_house_model"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tvc_measure_form_house_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/issue_room"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:layout_width="wrap_content"
