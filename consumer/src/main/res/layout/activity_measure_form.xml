                    android:textSize="@dimen/font_14" />

                <com.autodesk.shejijia.consumer.uielements.TextViewContent
                    android:id="@+id/tvc_measure_form_area"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:gravity="center_vertical"
                    android:hint="@string/demand_room_area"
                    android:inputType="numberDecimal"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_10"
                    android:text="m²" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_18"
                    android:background="@color/bg_ef" />
            </LinearLayout>

            <LinearLayout
