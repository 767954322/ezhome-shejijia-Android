<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/common_navbar"
             layout="@layout/view_navigation_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <com.autodesk.shejijia.shared.components.common.uielements.ImageShowView
            android:id="@+id/ad_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_case_detail_look_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_gravity="bottom"
        android:background="@color/bg_f9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/piv_case_detail_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size_15"
            android:src="@drawable/icon_work_introduce" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size_15"
            android:text="@string/case_detail_work_introduce" />

    </LinearLayout>
</LinearLayout>