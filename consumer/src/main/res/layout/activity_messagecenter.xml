<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/decoration_ref"
        layout="@layout/view_navigation_header" />

    <com.autodesk.shejijia.shared.components.common.uielements.pulltorefresh.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/decoration_ref">

        <include layout="@layout/view_refresh_head" />


        <com.autodesk.shejijia.shared.components.common.uielements.pulltorefresh.PullListView
            android:id="@+id/message_center_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="true"
            android:scrollbars="none"
            />

        <include layout="@layout/view_load_more" />
    </com.autodesk.shejijia.shared.components.common.uielements.pulltorefresh.PullToRefreshLayout>


</RelativeLayout>
