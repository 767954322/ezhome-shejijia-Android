<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bid_hall_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bid_hall_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中式/"
                    android:textColor="@color/bg_66"/>

                <TextView
                    android:id="@+id/tv_bid_livingroom_roomhall_t_toilet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一室一厅一卫"
                    android:textColor="@color/bg_66"/>

                <TextView
                    android:id="@+id/tv_bid_hall_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:text="面积"
                    android:textColor="@color/bg_66"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bidding_contact"
                    android:textColor="@color/bg_66"/>

                <TextView
                    android:id="@+id/tv_bid_hall_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张"
                    android:textColor="@color/bg_66"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10"
            android:gravity="right|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bid_hall_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3000"
                android:textColor="@color/bg_0d74bc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bid_hall_decorate_budget"
                android:textColor="@color/bg_99"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>