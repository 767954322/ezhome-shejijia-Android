<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_brand_name"
            style="@style/item_text_style"
            android:layout_gravity="left"
            android:paddingTop="14dp"
            android:text="品牌名称"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_brand_change"
            style="@style/item_text_style"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:paddingTop="14dp"
            android:text="品牌变更"
            android:textColor="@color/search_text_color"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/item_text_style"
            android:text="数量："/>

        <EditText
            android:id="@+id/et_brand_num"
            style="@style/style_edit_text"
            android:layout_width="@dimen/size_160"
            android:layout_height="@dimen/size_30"
            android:hint="请填写数量（单位）"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/item_text_style"
            android:text="规格："/>

        <EditText
            android:id="@+id/et_brand_dimension"
            style="@style/style_edit_text"
            android:layout_width="@dimen/size_160"
            android:layout_height="@dimen/size_30"
            android:hint="请填写规格"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/item_text_style"
            android:text="空间："/>

        <com.autodesk.shejijia.consumer.personalcenter.recommend.view.customspinner.MaterialSpinner
            android:id="@+id/spinner_brand_apartment"
            android:layout_width="@dimen/size_160"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="start|center_vertical"
            android:textSize="@dimen/font_15"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="@dimen/size_200"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/item_text_style"
            android:text="备注："/>

        <EditText
            android:id="@+id/et_brand_remarks"
            style="@style/style_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写备注"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/item_text_style"
            android:layout_height="match_parent"
            android:text="店面："/>

        <TextView
            android:id="@+id/tv_brand_mall_name"
            style="@style/item_text_style"
            android:lineSpacingMultiplier="1.2"
            android:text=""/>
    </LinearLayout>

    <include
        layout="@layout/line_view"/>

    <include layout="@layout/item_recommend_button_footer"></include>



</LinearLayout>

