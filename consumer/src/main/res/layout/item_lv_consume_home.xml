<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_customer_home_case"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_180"
                android:scaleType="centerCrop"
                android:src="@drawable/common_case_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/size_60"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_9"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/iv_consume_home_designer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_25"
                        android:ellipsize="end"

                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="居然大厦"
                        android:textColor="@color/bg_40"
                        android:textSize="@dimen/font_16"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_20"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/tv_customer_home_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="一室"
                            android:textColor="@color/bg_00"
                            android:textSize="@dimen/size_16" />

                        <TextView
                            android:id="@+id/tv_customer_home_room"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_9"
                            android:text="欧式"
                            android:textColor="@color/bg_00"
                            android:textSize="@dimen/size_16" />

                        <TextView
                            android:id="@+id/tv_customer_home_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_9"
                            android:text="120"
                            android:textColor="@color/bg_00"
                            android:textSize="@dimen/size_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView

                            android:layout_width="@dimen/size_13"
                            android:layout_height="@dimen/size_13"
                            android:layout_marginRight="@dimen/size_5"
                            android:background="@drawable/dianzanshu_ico" />

                        <TextView
                            android:id="@+id/tv_thumb_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点赞数111"
                            android:layout_marginLeft="@dimen/size_4"
                            android:textColor="@color/bg_80"
                            android:textSize="@dimen/size_13" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_consume_home_line"
                        android:layout_width="@dimen/size_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@color/bg_b0"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_consume_home_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_marginRight="@dimen/size_10"
                        android:padding="10dp"
                        android:src="@drawable/im_ico" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <com.autodesk.shejijia.shared.components.common.uielements.viewgraph.PolygonImageView
            android:id="@+id/piv_img_customer_home_header"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size_30"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            app:poly_border="true"
            app:poly_border_color="@color/bg_ff"
            app:poly_border_width="@dimen/size_5"
            app:poly_corner_radius="5"
            app:poly_vertices="0" />
    </FrameLayout>

</LinearLayout>

