<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/rl_village_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_15"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_village_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/details"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小区信息"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ib_village_info"
            android:layout_marginLeft="@dimen/font_15"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_design_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_15"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_design_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/information"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计文件"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ib_design_document"
            android:layout_marginLeft="@dimen/font_15"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_jump_construction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_15"
        android:layout_marginBottom="@dimen/font_15"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_jump_construction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_instruction"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转到施工"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ib_jump_construction"
            android:layout_marginLeft="@dimen/font_15"
            />
    </RelativeLayout>

</LinearLayout>
