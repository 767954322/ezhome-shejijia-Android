<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_f3"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10"
        android:background="@color/bg_ff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/icon_position_normal"/>

            <TextView
                android:id="@+id/tv_out_bid_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_5"
                android:text="@string/my_bid_address"
                android:textColor="@color/zxing_corner"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_ff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/size_280"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_5">

                    <TextView
                        android:id="@+id/tv_out_bid_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_bid_living_room"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/tv_out_bid_living_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_bid_hall"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/tv_out_bid_toilet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_bid_toilet"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/tv_out_bid_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:text="120m²"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bidding_room_shape"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/tv_out_bid_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:text="@string/bidding_room_space"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/designer_order_style"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>

                    <TextView
                        android:id="@+id/tv_out_bid_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5"
                        android:text="@string/designer_order_style_detail"
                        android:textColor="@color/bg_f000"
                        android:textSize="@dimen/size_10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_5">

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="应标人数:"-->
                    <!--android:textColor="@color/bg_f000"-->
                    <!--android:textSize="@dimen/size_10"/>-->

                    <!--<TextView-->
                    <!--android:id="@+id/tv_out_bid_bid_count"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/size_5"-->
                    <!--android:text="3位设计师"-->
                    <!--android:textColor="@color/zxing_corner"-->
                    <!--android:textSize="@dimen/size_10"/>-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/size_10"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_out_bid_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/my_bid_budget_money"
                    android:textColor="@color/zxing_corner"
                    android:textSize="@dimen/size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_bid_budget"
                    android:textColor="@color/bg_00"
                    android:textSize="@dimen/size_10"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/line_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40"
            android:layout_marginLeft="@dimen/size_10"
            android:gravity="center"
            android:text="@string/my_project_out_bid"
            android:textColor="@color/bg_00"/>
    </LinearLayout>
</LinearLayout>