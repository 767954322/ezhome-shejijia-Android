<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_f1f6fb"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <TextView
                android:id="@+id/tv_my_property_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="居然大厦_简装设计"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_my_property_project_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-2-10"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/bg_ed" />
        <!--状态-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_ff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_type"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16"

                />

            <TextView
                android:id="@+id/tv_my_property_transaction_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已支付"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/bg_ed" />
<!--交易名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_ff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_name"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16" />


            <TextView
                android:id="@+id/tv_my_property_transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="量房费"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/bg_ed" />
<!--交易金额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_ff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_amount"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16" />


            <TextView
                android:id="@+id/tv_my_property_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥200.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/bg_ed" />
<!--订单编号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_ff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_reference"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16" />


            <TextView
                android:id="@+id/tv_my_property_order_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="154567845"
                android:textColor="@color/bg_33"
                android:textSize="@dimen/font_16" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>