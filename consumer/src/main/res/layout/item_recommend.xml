<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/line_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="西山一号"
            android:textColor="@color/text_item_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="清单编号：5552545222"
            android:textColor="@color/font_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0.5"
            android:layout_alignParentBottom="true"
            android:background="#dedede"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <TextView
            style="@style/item_text_style"
            android:text="@string/name_space"/>

        <TextView
            style="@style/item_text_style"
            android:text="赵大宝"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <TextView
            style="@style/item_text_style"
            android:text="@string/consume_phone_number"/>

        <TextView
            style="@style/item_text_style"
            android:text="15245228786"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <TextView
            style="@style/item_text_style"
            android:text="@string/demand_project_address"/>

        <TextView
            style="@style/item_text_style"
            android:layout_weight="1"
            android:text="紫光发展大厦"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/icon_unfold_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <TextView
            style="@style/item_text_style"
            android:text="@string/address_details"/>

        <TextView
            style="@style/item_text_style"
            android:text="小关东街4号楼"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <TextView
            style="@style/item_text_style"
            android:text="@string/consumer_decoration_buildtime"/>

        <TextView
            style="@style/item_text_style"
            android:text="2016-05-06 10:20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="#dedede"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_cancel_btn"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_btn_filtrate_pressed"
                android:gravity="center"
                android:text="撤销"
                android:textColor="@color/color_blue_0084ff"
                android:textSize="@dimen/font_12"/>

            <TextView
                android:id="@+id/tv_edit_btn"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_btn_filtrate_pressed"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/color_blue_0084ff"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>

        <include layout="@layout/line_view"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eef1f4"/>
</LinearLayout>