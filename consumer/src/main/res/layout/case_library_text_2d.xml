<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/ll_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_13"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_13"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
     >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10"
            android:text="@string/community_name"
            android:textColor="@color/bg_99"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_case_community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/size_7"
            android:textColor="@color/search_title"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0.5"
            android:layout_marginBottom="@dimen/size_13"
            android:layout_marginTop="@dimen/size_13"
            android:background="@color/bg_ea"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10"
            android:text="@string/plan_introduce"
            android:textColor="@color/bg_99"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/case_library_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/size_7"
            android:textColor="@color/bg_33"
            android:textSize="@dimen/font_14" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/ll_case"
        android:background="@color/bg_d7" />


</RelativeLayout>