<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/size_10"
              android:background="@drawable/dialog_bg"
              android:orientation="vertical"
              android:padding="@dimen/size_10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_decoration_title_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/decoration_choose_title"
            android:textColor="@color/actionsheet_blue"
            android:textSize="@dimen/font_18"/>

        <ImageView
            android:id="@+id/decoration_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/search_clear_normal_or"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="@dimen/size_18"
        android:background="@color/actionsheet_gray"/>

    <FrameLayout
        android:layout_width="@dimen/size_130"
        android:layout_height="@dimen/size_100"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size_10">

        <com.autodesk.shejijia.consumer.uielements.viewgraph.PolygonImageView
            android:id="@+id/ployimg_decoration_choose"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:layout_gravity="center"
            android:background="@drawable/icon_default_avator"
            app:poly_vertices="0"/>

        <ImageView
            android:id="@+id/img_dialog_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:src="@drawable/icon_certification_normal"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_decoration_name_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/name"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <TextView
                android:text="@string/be_good_at_simple"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_18"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_decoration_designer_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/essential_info"
                android:textColor="@color/actionsheet_gray"
                android:textSize="@dimen/font_18"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_decoration_designer_expens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_10"
            android:text=""
            android:textColor="@color/actionsheet_blue"
            android:textSize="@dimen/font_18"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ibn_decoration_refuse_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_2"
            android:background="@drawable/buttn_yj_red"
            android:text="@string/decoration_choose_refuse"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/ibn_decoration_measure_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_2"
            android:background="@drawable/buttn_yj"
            android:text="@string/decoration_choose_measure"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/ibn_decoration_chat_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_2"
            android:background="@drawable/buttn_yj"
            android:text="@string/decoration_choose_chat"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>
