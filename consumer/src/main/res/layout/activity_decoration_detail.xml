<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_eef1f4">


        <LinearLayout
            android:id="@+id/ll_consumer_demand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_eef1f4"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <ImageView
                    android:id="@+id/iv_consumer_decoration_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_position_normal"/>

                <TextView
                    android:id="@+id/tv_decoration_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/bg_33"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/tv_decoration_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_0d74bc"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>

            <include layout="@layout/view_parting_line"></include>
            <!--项目编号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/bg_ff"
                    android:text="@string/common_order_project_number"
                    android:textColor="@color/bg_9E"
                    android:textSize="@dimen/font_15"/>

                <TextView
                    android:id="@+id/tv_decoration_needs_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/no_color"
                    android:textColor="@color/bg_9E"
                    android:textSize="@dimen/font_15"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_space"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/et_amend_amend_name"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consume_phone"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/et_issue_amend_mobile"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demand_village_name"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/et_issue_demand_detail_address"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_issue_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demand_project_address"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/tv_issue_address"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_unfold_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demand_planning_budget"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/tv_amend_design_budget"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textColorHint="#999"
                    android:textSize="@dimen/font_14"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demand_project_budget"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/tv_aemand_budget"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textColorHint="#999"
                    android:textSize="@dimen/font_14"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_amend_house_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demand_project_types"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/tv_amend_house_type"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textColorHint="#999"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demand_house_model"
                    android:textSize="@dimen/font_16"/>

                <LinearLayout
                    android:layout_width="@dimen/size_1"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@color/no_color"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_amend_room_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_order_project_area"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/et_ademand_area"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textColorHint="#999"
                    android:textSize="@dimen/font_14"/>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="@dimen/size_18"-->
                    <!--android:text="㎡"/>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_amend_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@color/bg_ff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demand_style"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/tv_amend_style"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:background="@color/bg_ef"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:background="@color/bg_ef"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:background="@color/bg_ef"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/bg_ff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:background="@color/bg_ef"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consumer_decoration_buildtime"
                    android:textColor="#666"
                    android:textSize="@dimen/font_16"/>

                <TextView
                    android:id="@+id/tv_public_time"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/no_color"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_demand_modify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <Button
                    android:id="@+id/btn_fitment_stop_demand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_border_cancel"
                    android:text="@string/button_decoration_stop"
                    android:visibility="gone"
                    android:textColor="@color/bg_0084ff"
                    />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_fitment_amend_demand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_weight="1"
                    android:background="@drawable/bg_common_btn_blue"
                    android:text="@string/button_decoration_amend"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>