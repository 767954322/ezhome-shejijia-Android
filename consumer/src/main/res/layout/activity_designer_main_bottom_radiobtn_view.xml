<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_bottombar_height"
                android:background="@android:color/transparent">

    <RadioGroup
        android:id="@+id/designer_main_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_55"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_22"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/designer_main_radio_btn"
            style="@style/main_tab_bottom"
            android:layout_marginTop="@dimen/size_6"
            android:checked="true"
            android:drawableTop="@drawable/tab_case_selector"
            android:text="@string/tab_home"
            android:textSize="@dimen/size_12"/>

        <!--设计师-->
        <RadioButton
            android:id="@+id/radio_btn_designer"
            style="@style/main_tab_bottom"
            android:layout_marginTop="@dimen/size_6"
            android:checked="false"
            android:drawableTop="@drawable/tab_designer_selector"
            android:text="@string/tab_designer"
            android:textSize="@dimen/size_12"/>

        <RadioButton
            android:id="@+id/designer_indent_list_btn"
            style="@style/main_tab_bottom"
            android:layout_marginTop="@dimen/size_6"
            android:checked="false"
            android:drawableTop="@drawable/tab_hall_selector"
            android:text="@string/tab_hall"
            android:textSize="@dimen/size_12"
            android:visibility="gone"/>

        <RadioButton
            android:id="@+id/rb_customer_elite"
            style="@style/main_tab_bottom"
            android:layout_marginTop="@dimen/size_6"
            android:checked="false"
            android:drawableTop="@drawable/selector_hall"
            android:text="@string/tab_six_products"
            android:textSize="@dimen/size_12"
            />

        <RadioButton
            android:id="@+id/designer_session_radio_btn"
            style="@style/main_tab_bottom"
            android:layout_marginTop="@dimen/size_6"
            android:checked="false"
            android:drawableTop="@drawable/tab_im_selector"
            android:text="@string/tab_im"
            android:textSize="@dimen/size_12"/>

        <RadioButton
            android:id="@+id/designer_person_center_radio_btn"
            style="@style/main_tab_bottom"
            android:layout_marginTop="@dimen/size_6"
            android:checked="false"
            android:drawableTop="@drawable/tab_project_selector"
            android:text="@string/tab_personalcenter"
            android:textSize="@dimen/size_12"/>
    </RadioGroup>

    <ImageButton
        android:id="@+id/consumer_elite_circularbtn"
        android:layout_width="@dimen/home_bottombar_circularbutton_side"
        android:layout_height="@dimen/home_bottombar_circularbutton_side"
        android:src="@drawable/decorate_ico"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/designer_main_radio_group"
        android:layout_marginBottom="@dimen/home_bottombar_circularbutton_marginbottom"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_marginTop="@dimen/home_bottombar_radiogroup_margintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@drawable/redsharp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>