<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ff"
    android:orientation="vertical"
    tools:context=".personalcenter.designer.activity.AttestationInfoActivity">

    <include android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_1"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/bg_eb" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pic_audit_status_one"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center"
                android:background="@drawable/bg_attestation_info_pressed"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/font_29" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_1"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/bg_eb" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pic_audit_status_two"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center"
                android:background="@drawable/bg_attestation_info_normal"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/font_29" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_1"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/bg_eb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pic_audit_status_three"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center"
                android:background="@drawable/bg_attestation_info_normal"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/bg_ff"
                android:textSize="@dimen/font_29" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_txt_audit_status_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/autonym_information_delivery"
            android:textColor="@color/bg_ed8e00" />

        <TextView
            android:id="@+id/tv_txt_audit_status_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/autonym_message_moderation"
            android:textColor="@color/bg_ef" />

        <TextView
            android:id="@+id/tv_txt_audit_status_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/autonym_audit_pass"
            android:textColor="@color/bg_ef" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_audit_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_50"
        android:background="@drawable/icon" />

    <TextView
        android:id="@+id/tv_audit_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_50"
        android:text="@string/data_sent_please_patience_wait_audit"
        android:textColor="@color/bg_66"
        android:textSize="@dimen/font_20" />

</LinearLayout>
