<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="custom_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_star</item>
        <item name="android:layout_centerVertical">true</item>

        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="BidItem"></style>

    <style name="BidItem.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/mybid_text_color_normal</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="BidItem.Text.Light">
        <item name="android:textColor">@color/mybid_text_color_light</item>
    </style>

    <style name="BidItem.Divider_Internal">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">@dimen/mybid_item_margin_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
